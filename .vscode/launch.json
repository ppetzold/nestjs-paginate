{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Test Debug",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "--preserve-symlinks",
                "run",
                "test:watch",
                "--",
                "--inspect-brk",
            ],
            "console": "integratedTerminal",
            "restart": true,
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "autoAttachChildProcesses": true,
            "envFile": "${workspaceFolder}/.env"
        },
    ]
}